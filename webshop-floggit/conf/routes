# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET 		/start			                           			controllers.Application.startPageApplication()

GET			/listAllCat											controllers.Category.listAllCat()
GET			/showOneCat											controllers.Category.showOneCat()
GET			/editCat											controllers.Category.editCat()

GET			/listAllProd										controllers.Product.listAllProd()
GET			/showOneProd										controllers.Product.showOneProd()
GET			/editProd											controllers.Product.editProd()

GET			/showShoppingBasket									controllers.ShoppingBasket.showShoppingBasket()
GET			/checkout											controllers.ShoppingBasket.checkout()

# Map static resources from the /public folder to the /assets URL path
GET     	/assets/*file   	    					        controllers.Assets.at(path="/public", file)
